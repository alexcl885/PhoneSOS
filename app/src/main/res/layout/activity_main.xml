<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            app:srcCompat="@drawable/mrrobot" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="217dp"
            android:layout_height="44dp"

            android:layout_gravity="left"
            android:layout_margin="40dp"
            android:layout_marginTop="20dp"
            android:background="#01043A"
            app:srcCompat="@android:drawable/stat_sys_vp_phone_call" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="196dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_margin="40dp"
            android:background="#3C0202"
            app:srcCompat="@drawable/hacker_hacker_message_512" />

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="210dp"
            android:layout_height="52dp"
            android:layout_gravity="left"
            android:layout_margin="40dp"
            android:layout_marginTop="40dp"
            android:background="#613D04"
            app:srcCompat="@drawable/maps" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="210dp"
            android:layout_height="52dp"
            android:layout_gravity="right"
            android:layout_margin="40dp"
            android:layout_marginTop="40dp"
            android:background="#2C4E03"
            app:srcCompat="@android:drawable/alert_dark_frame" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>